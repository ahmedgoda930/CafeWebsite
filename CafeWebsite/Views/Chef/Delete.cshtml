@model CafeWebsite.Models.Chef

@{
    ViewBag.Title = "Delete";
}
<div class="card">
    <div class="header">
        <h2 class="title">Delete Chef</h2>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="form-control">
                    <label>Name : </label>
                    <label>
                        @Html.DisplayFor(model => model.Name)
                    </label>
                </div>
                <br />
                <div class="form-group">
                    <img src="~/Uploads/@Html.DisplayFor(model => model.URL)" class="img-box-ch" id="b-img" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Content : </label>
                    <p class="">@Html.Raw(Model.Content)</p>
                </div>

            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row text-center">
                <div class="col-md-6">
                    <a class="btn btn-default" href="/Chef/Index">Back To List</a>
                </div>
                <div class="col-md-6">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>



