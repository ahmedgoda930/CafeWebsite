@model CafeWebsite.Models.MenuCat

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="card">
    <div class="header">
        <h2 class="title">Edit Menu's Category</h2>
    </div>
    <div class="content">

        @using (Html.BeginForm("Edit", "MenuCat", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name : </label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <a class="btn btn-default" href="/MenuCat/Index">Back To List</a>
                        </div>
                        <div class="col-md-6">
                            <input type="submit" value="Edit Category" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
